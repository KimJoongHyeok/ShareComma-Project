        .admin-controls {
          position: absolute; right: 0; height: 8rem; top: 0; bottom: 0; margin: auto; border-left: .1rem solid $color-grey-light; padding-left: 2rem; padding-right: 2rem; z-index: 1; background-color: #fff;
          a {
            display: block; padding: .4rem 0;
            i {
              margin-right: 1rem;
            }
          }
