    &:after {
      background-color: $color-default; width: .5rem; height: 100%; content: ""; position: absolute; top: .5rem; right: -.5rem;
    }
    &:before {
      background-color: $color-default; width: 1rem; height: 1rem; position: absolute;; top: 0; right: -.5rem; content: ""; border-top-right-radius: 50%;
    }
  }
  .ribbon-start, .ribbon-start::after {
    background: $color-default; content: ""; display: inline-block; height: 1rem; width: .5rem; border-bottom-right-radius: 1rem; border-top-right-radius: 1rem; right: -.5rem; position: absolute; z-index: 1; top: 100%;
  }
  .ribbon-start::after {
    background: rgba(0,0,0,.3); z-index: 2; right: 0; top: 0;
  }
  .ribbon-end {
    height: 100%; width: 1.5rem; position: absolute; top: 0; left: -1.5rem;
    &:after, &:before, .ribbon-shadow::after, .ribbon-shadow::before {
      border-style: solid; position: absolute; top: 0; left: 0; content: "";
    }
    &:before, .ribbon-shadow::before {
      border-width: 0 1.5rem 1.5rem 0; border-color: transparent $color-default transparent transparent;
    }
    &:after, .ribbon-shadow::after {
      border-width: 0 0 1.5rem 1.5rem; border-color: transparent transparent $color-default transparent; bottom: 0;
    }
    .ribbon-shadow::before {
      border-color: transparent rgba(0,0,0,.15) transparent transparent; top: .1rem; z-index: -1;
    }
    .ribbon-shadow::after {
      border-color: transparent transparent rgba(0,0,0,.15) transparent; bottom: -.1rem; z-index: -1;
    }
  }
}

